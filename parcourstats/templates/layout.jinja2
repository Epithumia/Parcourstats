{% block doc -%}
    <!DOCTYPE html>
    <html lang="{{ request.locale_name }}">
    {%- block html %}
        <head>
            {%- block metas %}
                <!-- Required meta tags -->
                <meta charset="utf-8">
                <meta http-equiv="X-UA-Compatible" content="IE=edge">
                <meta name="viewport" content="width=device-width, initial-scale=1.0">
                <meta name="description" content="pyramid web application">
                <meta name="author" content="Rafaël Lopez">
            {%- endblock metas %}

            {%- block head %}
                <title>{% block title %}{{ title|default }}{% endblock title %}</title>

                {%- block styles %}
                    <link rel="shortcut icon"
                          href="{{ request.static_url('parcourstats:static/whirlpool-16x16.png') }}">
                    <link href="{{ request.static_url('parcourstats:static/bs4/css/bootstrap.min.css') }}"
                          rel="stylesheet">
                    <link href="{{ request.static_url('parcourstats:static/bs4/font-awesome/css/font-awesome.css') }}"
                          rel="stylesheet">
                    <link href="{{ request.static_url('parcourstats:static/theme.css') }}" rel="stylesheet">
                {% endblock styles %}
                <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
                <!--[if lt IE 9]>
                <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"
                        integrity="sha384-0s5Pv64cNZJieYFkXYOTId2HMA2Lfb6q2nAcx2n0RTLUnCAoTTsS0nKEO27XyKcY"
                        crossorigin="anonymous"></script>
                <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"
                        integrity="sha384-f1r2UzjsxZ9T4V1f2zBO/evUqSEOpeaUUZcMTz1Up63bl4ruYnFYeM+BxI4NhyI0"
                        crossorigin="anonymous"></script>
                <![endif]-->
            {%- endblock head %}
        </head>
        <body{% block body_attribs %}{% endblock body_attribs %}>
        {% block body -%}

            <header class="headercontent">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto header">
                        {% block navbar %}

                        {%- endblock navbar %}
                    </div>
                </div>
            </header>
            <div class="starter-template">
                <div class="container">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            {% block content %}
                                <p>No content</p>
                            {% endblock content %}
                        </div>
                        <div class="col-md-1"></div>
                    </div>

                </div>
            </div>
            <footer>
                <div class="links">
                    <ul class="footer-links-ul">
                        <li class="current-version">Version 1.0.0</li>
                        {% if request.authenticated_userid %}
                            {% if 'Admin' in request.effective_principals %}
                                <li><i class="fa fa-cog icon-muted"></i><a href={{ url }}/admin>Administration</a></li>
                            {% endif %}
                            <li><i class="fa fa-power-off icon-muted"></i><a href="{{ url }}/logout">Déconnexion</a>
                            </li>
                        {% else %}
                            <li><i class="fa fa-play icon-muted"></i><a href="{{ url }}/login">Connexion</a></li>
                        {% endif %}
                        <li><i class="fa fa-home icon-muted"></i><a href="{{ url }}">Accueil</a></li>
                    </ul>
                </div>
                <div class="copyright">
                    Développement - Rafaël Lopez
                </div>
            </footer>

            {% block scripts %}
            {%- endblock scripts %}
        {%- endblock body %}
        </body>
    {% endblock html %}
    </html>
{% endblock doc %}
